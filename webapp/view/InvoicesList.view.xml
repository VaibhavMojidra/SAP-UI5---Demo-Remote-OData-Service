<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="com.vaibhavmojidra.remoteodataservicedemo.controller.InvoicesList"
	>
	<List
		headerText="Invoices"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{invoice>/Invoices}">
		<ObjectListItem 
			title="{invoice>Quantity} x {invoice>ProductName}"
			number="{
				parts:[
					'invoice>ExtendedPrice',
					'myView>/currency'
				],
				type: 'sap.ui.model.type.Currency',
				formatOptions: {
                    showMeasure: false
                }
			}"
			numberUnit="{myView>/currency}"
			numberState="{=${invoice>ExtendedPrice}>200?'Error':'Success'}"
		/>	
	</List>
</mvc:View>